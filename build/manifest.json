{
  "background": {
    "scripts": ["Index.js"]
  },
  "manifest_version": 2,
  "name": "Work to Multiple Windows",
  "description": "This project is a chrome extension. It provide to create windows to different sizes and multiple for front-end developers.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "build/icon-16.png"
  },
  "icons": {
    "256": "build/icon-256.png",
    "128": "build/icon-128.png",
    "48": "build/icon-48.png",
    "16": "build/icon-16.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "Index.js",
    "bundle.js",
    "*.ttf",
    "*.woff",
    "*.woff2",
    "*.png",
    "*.eot",
    "*.svg",
    "http://*",
    "https://*"
  ]
}
